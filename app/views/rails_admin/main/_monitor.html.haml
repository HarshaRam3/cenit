- actions ||= []
- url ||= ''
.col-sm-4
  .monitor{class: "#{label_name} #{name.parameterize('_')}"}
    .col-xs-2.icon
      %a{ href: url}
        %i.fa{class: icon}
    .col-xs-10.white-back
      .actions
        %a{ href: url}
          = name
        .pull-right
          - if actions.length > 0
            .dropdown
              %a.dropdown-toggle{data: {toggle: "dropdown" } }
                .btn.btn-link
                  %i.fa.fa-ellipsis-v
              %ul.dropdown-menu{style: "left:auto; right:0;"}
                - actions.each do |a|
                  %li
                    %a{class: "update-monitor", data:{status: "#{a[:class]}"}}
                      =a[:label]
      .number
        - actions.each do |a|
          - v = a[:value]
          - color = status_color(v)
          %span{class: "#{a[:class]== label_name ? '': 'hidden'} #{a[:class]} #{color}"}
            = number_to_human(v)
        %div.description
          - actions.each do |a|
            - v = a[:value]
            - color = status_color(v)
            %span{class: "#{a[:class]== label_name ? '': 'hidden'} #{a[:class]} #{color}"}
              = number_to_human(a[:description])
